<div class="maincontant text-center">

<p id="notice"><%= notice %></p>

<h1><ins><em>All Posts</em></ins></h1>


<div class="table-responsive">

<table class="table table-hover">


  <thead>
    <tr class="info">
      <th>Title</th>
<!--       <th>Location</th>
 -->  <th>Date</th>
      <th>Text</th>
      <th>Photos</th>
      <th>Privacy</th>
      <th>Bus</th>
      <th>Car</th>
      <th>Boat</th>
      <th>Plane</th>
      <th>Walking</th>
      <th>Train</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="warning">
        <td><%= post.title %></td>
<!--         <td><%= post.location %></td>
 -->    <td><%= post.date %></td>
        <td><%= post.text %></td>
        <td><%= post.photos %></td>
        <td><%= post.privacy %></td>
        <td><%= post.bus %></td>
        <td><%= post.car %></td>
        <td><%= post.boat %></td>
        <td><%= post.plane %></td>
        <td><%= post.walking %></td>
        <td><%= post.train %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class=""><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


</table>


</div>



<br>

<%= link_to 'New Post', new_post_path %>

</div>