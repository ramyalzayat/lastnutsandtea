  </div>
</label>


  <label class="checkbox-inline">
  <div class="field">
  <i class="fa fa-plane" aria-hidden="true"></i>
    <%= f.label :plane %><br>
    <%= f.check_box :plane %>
  </div>
</label>


  <label class="checkbox-inline">
  <div class="field">
<i class="fa fa-male" aria-hidden="true"></i>
    <%= f.label :walking %><br>
    <%= f.check_box :walking %>
  </div>
</label>


  <label class="checkbox-inline">
  <div class="field">
  <i class="fa fa-subway" aria-hidden="true"></i>
    <%= f.label :train %><br>
    <%= f.check_box :train %>
  </div>
</label><br><br><br>
</div><br>



